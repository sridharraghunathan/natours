header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt=' Natours Logo')
    nav.nav.nav--user
        //- this will enable user Logged in  user variable is set in IsLogged in props
        if user
            a.nav__el.nav__el--logout Log out 
            a.nav__el(href="/account")
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.photo}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href="/login") Log In 
            a.nav__el.nav__el--cta(href="/signup") SignUp