extends base
block content
  main.main
    .signup-form
      h2.heading-secondary.ma-bt-lg Create an User Account
      form.form.form--signup
        .form__group
          label.form__label(for='name') Full Name 
          span.required *
          input#name.form__input(type='name' placeholder='FirstName LastName', required)
        .form__group
          label.form__label(for='email') Email address
          span.required *
          input#email.form__input(type='email' placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          span.required *
          input#password.form__input(type='password' placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Password Confirm
          span.required *
          input#password__confirm.form__input(type='password' placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green SignUp